		"svelte-jester": "^2.3.2",
		"svelte-loader": "^3.1.3",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.11",
		"tailwindcss": "^3.1.4",
		"ts-jest": "^28.0.8",
		"tslib": "^2.3.1",
		"typescript": "^4.7.2",
		"vite": "^3.0.9"
	},
	"type": "module",
	"peerDependencies": {
		"felte": "^1.2.3",
		"svelte": "^3.48.0"
	}
}
