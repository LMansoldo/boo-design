{
	"name": "boo-design",
	"version": "0.0.1",
	"scripts": {
		"dev:only": "vite dev",
		"build:only": "vite build",
		"preview": "vite preview",
		"package:watch": "svelte-package -w",
		"package": "svelte-package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"assets:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/lib/styles/tailwind.scss -o static/app.scss -w",
		"assets:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/lib/styles/tailwind.scss -o static/app.scss",
		"dev": "concurrently \"npm run dev:only\" \"npm run assets:watch\"",
		"build": "npm run assets:build && npm run build:only",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"link": "cd dist && npm link"
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@babel/plugin-transform-modules-commonjs": "^7.18.6",
		"@babel/preset-env": "^7.18.10",
		"@fullhuman/postcss-purgecss": "^4.1.3",
		"@mdx-js/mdx": "^1.6.22",
		"@storybook/addon-actions": "^6.5.9",
		"@storybook/addon-docs": "^6.5.9",
		"@storybook/addon-essentials": "^6.5.9",
		"@storybook/addon-interactions": "^6.5.9",
		"@storybook/addon-links": "^6.5.9",
		"@storybook/addon-svelte-csf": "^2.0.4",
		"@storybook/builder-vite": "^0.1.38",
		"@storybook/builder-webpack4": "^6.5.9",
		"@storybook/manager-webpack4": "^6.5.9",
		"@storybook/svelte": "^6.5.9",
		"@storybook/testing-library": "^0.0.13",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.24",
		"@sveltejs/kit": "^1.0.0-next.231",
		"@sveltejs/package": "^1.0.0-next.3",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@testing-library/user-event": "^14.4.3",
		"@tsconfig/svelte": "^2.0.1",
		"@types/jest": "^28.1.8",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.7",
		"babel-loader": "^8.2.5",
		"concurrently": "^7.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-storybook": "^0.5.13",
		"eslint-plugin-svelte3": "^4.0.0",
		"felte": "^1.2.3",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^29.0.1",
		"node-sass": "^7.0.1",
		"postcss": "^8.4.14",
		"postcss-cli": "^10.0.0",
		"postcss-import": "^14.1.0",
		"postcss-nesting": "^10.1.10",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.53.0",
		"storybook-addon-sass-postcss": "^0.1.3",
